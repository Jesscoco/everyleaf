<h1>users</h1>

<%= link_to 'New User', new_admin_user_path , class:' btn btn-primary btn-sm text-white'%>
<br>
<table class="table">
  <thead>
    <tr>
    <th> User name  </th>
      <th>Email</th>
      <th> Tasks number </th>
      <th> Rule </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      <td> <%= user.name%> </td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td> <% if user.is_admin%>
        Admin<% else%> 
        General user</td>
        <% end %>

        <td><%= link_to 'Show profil', admin_user_path(user.id), class:'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user.id) , class:'btn btn-outline-success btn-sm'%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class:'btn btn-outline-danger btn-sm'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

